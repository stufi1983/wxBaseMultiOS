{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "Build with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j"
            ],
            "group": "build",
            "dependsOn": [
                "Configure with CMake"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S.",
                "-Bbuild"
            ]
        },
		{
			"type": "cppbuild",
			"label": "Windows MinGW g++ Debug",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\src\\*.cpp",
				"-o",
				"${workspaceFolder}\\build\\win_x64\\debug\\${fileWorkspaceFolderBasename}.exe",
				"-I",
				"${workspaceFolder}\\include",
				"-I",
				"${config:wxWidget_dir}\\include",
				"-I",
				"${config:wxWidget_dir}\\lib\\gcc_x64_dll\\mswud",
				"-L",
				"${config:wxWidget_dir}\\lib\\gcc_x64_dll",
				"-l",
				"wxmsw32ud_core",
				"-l",
				"wxbase32ud"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\msys64\\ucrt64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
            "label": "Windows MinGW g++ Release",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\build\\win_x64\\release\\${fileWorkspaceFolderBasename}.exe",
                "-I",
				"${workspaceFolder}\\include",
				"-I",
				"${config:wxWidget_dir}\\include",
				"-I",
				"${config:wxWidget_dir}\\lib\\gcc_x64_dll\\mswu",
				"-L",
				"${config:wxWidget_dir}\\lib\\gcc_x64_dll",
				"-l",
				"wxmsw32u_core",
				"-l",
				"wxbase32u"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:\\msys64\\ucrt64\\bin\\g++.exe"
		}
	]
}